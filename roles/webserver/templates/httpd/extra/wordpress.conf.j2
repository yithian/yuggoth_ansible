{{ ansible_managed | comment }}
# configuration for wordpress
<VirtualHost *:{{ web_port }}>
    ServerAdmin {{ user }}@{{ domain }}
    ServerName {{ wordpress_host }}
    DocumentRoot {{ wordpress_dir}}

    Redirect permanent / https://{{ wordpress_host }}/

    ErrorLog /var/log/httpd/{{ wordpress_host }}-error_log
    CustomLog /var/log/httpd/{{ wordpress_host }}-access_log common
</VirtualHost>

<VirtualHost *:{{ ssl_port }}>
    ServerAdmin {{ user }}@{{ domain }}
    ServerName {{ wordpress_host }}
    DocumentRoot {{ wordpress_dir }}

    <Directory {{ wordpress_dir }}>
        AllowOverride all
        Options FollowSymlinks
        Require all granted
    </Directory>

    SSLEngine on
    SSLCertificateFile "/etc/letsencrypt/live/{{ web_host }}/fullchain.pem"
    SSLCertificateKeyFile "/etc/letsencrypt/live/{{ web_host }}/privkey.pem"

    <FilesMatch "\.(cgi|shtml|phtml|php)$">
        SSLOptions +StdEnvVars
    </FilesMatch>
    <Directory "/srv/http/cgi-bin">
        SSLOptions +StdEnvVars
    </Directory>
    BrowserMatch "MSIE [2-5]" \
         nokeepalive ssl-unclean-shutdown \
         downgrade-1.0 force-response-1.0
    ErrorLog /var/log/httpd/ssl_{{ wordpress_host }}-error_log
    CustomLog "/var/log/httpd/ssl_{{ wordpress_host }}-request_log" \
          "%t %h %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b"
</VirtualHost>
