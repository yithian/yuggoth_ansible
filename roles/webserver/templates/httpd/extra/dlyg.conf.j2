{{ ansible_managed | comment }}
# configuration for the dlyg rails app
<VirtualHost *:{{ web_port }}>
    ServerAdmin {{ user }}@{{ domain }}
    ServerName {{ dlyg_host }}

    Redirect permanent / https://{{ dlyg_host }}/

    ErrorLog /var/log/httpd/{{ dlyg_host }}-error_log
    CustomLog /var/log/httpd/{{ dlyg_host }}-access_log common
</VirtualHost>

<VirtualHost *:{{ ssl_port }}>
    ServerAdmin {{ user }}@{{ domain }}
    ServerName {{ dlyg_host }}

    ProxyPass / http://localhost:{{ dlyg_port }}/
    ProxyPassReverse / http://localhost:{{ dlyg_port }}/

    SSLEngine on
    SSLCertificateFile "/etc/letsencrypt/live/{{ web_host }}/fullchain.pem"
    SSLCertificateKeyFile "/etc/letsencrypt/live/{{ web_host }}/privkey.pem"

    BrowserMatch "MSIE [2-5]" \
         nokeepalive ssl-unclean-shutdown \
         downgrade-1.0 force-response-1.0
    ErrorLog /var/log/httpd/ssl_{{ dlyg_host }}-error_log
    CustomLog "/var/log/httpd/ssl_{{ dlyg_host }}-request_log" \
          "%t %h %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b"
</VirtualHost>
